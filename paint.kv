#:import C kivy.utils.get_color_from_hex

<ColorButton@RadioButton>: #pertenece a la clase RadioButton
	group: 'color' #el grupo se llama color
	on_release: app.canvas_widget.set_color(self.background_color) #al apretar el boton se setea el color
	background_normal: 'color_button_normal.png' #color cuando esta normal
	background_down: 'color_button_down.png' #color cuando se presiona
	border: (3,3,3,3) #borde del boton

<LineWidthButton@RadioButton>: #hereda de la clase ColorButton
	group: 'line_width'
	on_release: app.canvas_widget.set_line_width(self.text)
	#color: C('#2c3e50')
	#background_color: C('#ecf0f1')

<CanvasWidget>:
